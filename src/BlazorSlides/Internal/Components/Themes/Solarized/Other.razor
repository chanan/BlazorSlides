@if (RevealClassname != null)
{
    <Styled Id="BlazorSlidesTheme" Priority="200_000">
        .@RevealClassname p {
          margin: 20px 0;
          line-height: 1.3; 
        }

        .@RevealClassname img,
        .@RevealClassname video,
        .@RevealClassname iframe {
          max-width: 95%;
          max-height: 95%; 
        }

        .@RevealClassname strong,
        .@RevealClassname b {
          font-weight: bold; 
        }

        .@RevealClassname em {
          font-style: italic; 
        }

        .@RevealClassname ol,
        .@RevealClassname dl,
        .@RevealClassname ul {
          display: inline-block;
          text-align: left;
          margin: 0 0 0 1em; 
        }

        .@RevealClassname ol {
          list-style-type: decimal; 
        }

        .@RevealClassname ul {
          list-style-type: disc; 
        }

        .@RevealClassname ul ul {
          list-style-type: square; 
        }

        .@RevealClassname ul ul ul {
          list-style-type: circle; 
        }

        .@RevealClassname ul ul,
        .@RevealClassname ul ol,
        .@RevealClassname ol ol,
        .@RevealClassname ol ul {
          display: block;
          margin-left: 40px; 
        }

        .@RevealClassname dt {
          font-weight: bold; 
        }

        .@RevealClassname dd {
          margin-left: 40px; 
        }

        .@RevealClassname blockquote {
          display: block;
          position: relative;
          width: 70%;
          margin: 20px auto;
          padding: 5px;
          font-style: italic;
          background: rgba(255, 255, 255, 0.05);
          box-shadow: 0px 0px 2px rgba(0, 0, 0, 0.2); 
        }

        .@RevealClassname blockquote p:first-child,
        .@RevealClassname blockquote p:last-child {
          display: inline-block; }


        .@RevealClassname q {
          font-style: italic; 
        }

        .@RevealClassname pre {
          display: block;
          position: relative;
          width: 90%;
          margin: 20px auto;
          text-align: left;
          font-size: 0.55em;
          font-family: monospace;
          line-height: 1.2em;
          word-wrap: break-word;
          box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.15); 
        }

        .@RevealClassname code {
          font-family: monospace;
          text-transform: none; 
        }

        .@RevealClassname pre code {
          display: block;
          padding: 5px;
          overflow: auto;
          max-height: 400px;
          word-wrap: normal; 
        }

        .@RevealClassname table {
          margin: auto;
          border-collapse: collapse;
          border-spacing: 0; 
        }

        .@RevealClassname table th {
          font-weight: bold; 
        }

        .@RevealClassname table th,
        .@RevealClassname table td {
          text-align: left;
          padding: 0.2em 0.5em 0.2em 0.5em;
          border-bottom: 1px solid; 
        }

        .@RevealClassname table th[align="center"],
        .@RevealClassname table td[align="center"] {
          text-align: center; 
        }

        .@RevealClassname table th[align="right"],
        .@RevealClassname table td[align="right"] {
          text-align: right; 
        }

        .@RevealClassname table tbody tr:last-child th,
        .@RevealClassname table tbody tr:last-child td {
          border-bottom: none; 
        }

        .@RevealClassname sup {
          vertical-align: super;
          font-size: smaller; 
        }

        .@RevealClassname sub {
          vertical-align: sub;
          font-size: smaller; }

        .@RevealClassname small {
          display: inline-block;
          font-size: 0.6em;
          line-height: 1.2em;
          vertical-align: top; 
        }

        .@RevealClassname small * {
          vertical-align: top; 
        }
    </Styled>
}
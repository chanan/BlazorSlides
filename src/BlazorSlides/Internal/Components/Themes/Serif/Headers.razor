@if (RevealClassname != null)
{
    <Styled Id="BlazorSlidesTheme" Priority="200_000">
        .@RevealClassname h1,
        .@RevealClassname h2,
        .@RevealClassname h3,
        .@RevealClassname h4,
        .@RevealClassname h5,
        .@RevealClassname h6 {
            margin: 0 0 20px 0;
            color: #383D3D;
            font-family: "Palatino Linotype", "Book Antiqua", Palatino, FreeSerif, serif;
            font-weight: normal;
            line-height: 1.2;
            letter-spacing: normal;
            text-transform: none;
            text-shadow: none;
            word-wrap: break-word;
        }

        .@RevealClassname h1 {
            font-size: 3.77em;
        }

        .@RevealClassname h2 {
            font-size: 2.11em;
        }

        .@RevealClassname h3 {
            font-size: 1.55em;
        }

        .@RevealClassname h4 {
            font-size: 1em;
        }

        .@RevealClassname h1 {
            text-shadow: none;
        }
    </Styled>
}
<div class="@_progress">
    <span class="@_span">@SlidesAPI.State.SlidesWidth</span>
</div>

<Styled @bind-Classname="@_progress">
    label: progress;
    position: absolute;
    height: 3px;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 10;
    background-color: rgba(0, 0, 0, 0.2);
    color: #fff;
</Styled>

<Styled Classname="@_progress" PseudoClass="PseudoClasses.After">
    content: '';
    display: block;
    position: absolute;
    height: 10px;
    width: 100%;
    top: -10px;
</Styled>

<Styled @bind-Classname="@_span">
    label: progress-span;
    display: block;
    height: 100%;
    width: 0px;
    background-color: currentColor;
    transition: width 800ms cubic-bezier(0.26, 0.86, 0.44, 0.985);
    width: @GetProgress()
</Styled>
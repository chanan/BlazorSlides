<div class="@_slideNumber">
    <a class="@_slideNumberLink" href="@GetLink()">
        <span>@CurrentHorizontalIndex</span>
        @if (CurrentVerticalIndex != 0)
        {
            <span class="slide-number-delimiter">.</span>
            <span>@CurrentVerticalIndex</span>
        }
    </a>
</div>

<Styled @bind-Classname="@_slideNumber">
    label: slide-number;
    position: absolute;
    display: block;
    right: 8px;
    bottom: 8px;
    z-index: 31;
    font-family: Helvetica, sans-serif;
    font-size: 12px;
    line-height: 1;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.4);
    padding: 5px;
</Styled>

<Styled @bind-Classname="@_slideNumberLink">
    color: currentColor;
</Styled>

@code {
    //Styles
    private string _slideNumber;
    private string _slideNumberLink;

    [Parameter] public int CurrentHorizontalIndex { get; set; }
    [Parameter] public int CurrentVerticalIndex { get; set; }

    private string GetLink()
    {
        return "#/" + (CurrentHorizontalIndex - 1);
    }
}


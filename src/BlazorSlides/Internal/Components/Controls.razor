<aside class="@_controlsFinal">
    @if (!SlidesAPI.State.HasHorizontal && !SlidesAPI.State.HasVertical && SlidesAPI.State.CurrentFragmentCount > 0)
    {
        <ControlButton ArrowDirection="ArrowDirection.Left" IsEnabled="@IsArrowLeftEnabled" OnClick="@OnPrevious" />
        <ControlButton ArrowDirection="ArrowDirection.Right" IsEnabled="@IsArrowRightEnabled" OnClick="@OnNext" />
    }
    @if (SlidesAPI.State.HasHorizontal)
    {
        <ControlButton ArrowDirection="ArrowDirection.Left" IsEnabled="@IsArrowLeftEnabled" OnClick="@OnPrevious" />
        <ControlButton ArrowDirection="ArrowDirection.Right" IsEnabled="@IsArrowRightEnabled" OnClick="@OnNext" />
    }
    @if (SlidesAPI.State.HasVertical)
    {
        <ControlButton ArrowDirection="ArrowDirection.Up" IsEnabled="@IsArrowUpEnabled" OnClick="@OnUp" />
        <ControlButton ArrowDirection="ArrowDirection.Down" IsEnabled="@IsArrowDownEnabled" OnClick="@OnDown" />
    }
</aside>

<Styled @bind-Classname="@_controls">
    label: controls;
    position: absolute;
    top: auto;
    bottom: 12px;
    right: 12px;
    left: auto;
    z-index: 11;
    pointer-events: none;
    font-size: 10px;
</Styled>

<Styled @bind-Classname="@_dark">
    label: dark;
    color: #fff;
</Styled>

<Styled @bind-Classname="@_light">
    label: light;
    color: #000;
</Styled>

<Styled @bind-Classname="@_controlsFinal" 
    ComposeBase="@_controls"
    ComposeDark="@_dark" ComposeDarkIf="@HasDarkBackground"
    ComposeLight="@_light" ComposeLightIf="@HasLightBackground"
/>

<ThemeManager Region="Region.Controls" ControlsClassname="@_controls" />
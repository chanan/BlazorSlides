<button class="@_button" disabled=@(!IsEnabled) @onclick="@_onClick">
    <ControlArrow ArrowDirection="@ArrowDirection" IsEnabled="@IsEnabled" />
</button>

<Styled @bind-Classname="@_button"
        ComposeEnabled="@_enabled" ComposeEnabledIf="@IsEnabled"
        ComposeLeft="@_navigateLeft" ComposeLeftIf="@(ArrowDirection == ArrowDirection.Left)"
        ComposeRight="@_navigateRight" ComposeRightIf="@(ArrowDirection == ArrowDirection.Right)"
        ComposeUp="@_navigateUp" ComposeUpIf="@(ArrowDirection == ArrowDirection.Up)"
        ComposeDown="@_navigateDown" ComposeDownIf="@(ArrowDirection == ArrowDirection.Down)"
        ComposeLeftOverride="@_locationOverrideLeft" ComposeLeftOverrideIf="@(ArrowDirection == ArrowDirection.Left && !SlidesAPI.State.HasVertical)"
        ComposeRightOverride="@_locationOverrideRight" ComposeRightOverrideIf="@(ArrowDirection == ArrowDirection.Right && !SlidesAPI.State.HasVertical)"
        ComposeUpOverride="@_locationOverrideUp" ComposeUpOverrideIf="@(ArrowDirection == ArrowDirection.Up && !SlidesAPI.State.HasHorizontal)"
        ComposeDownOverride="@_locationOverrideDown" ComposeDownOverrideIf="@(ArrowDirection == ArrowDirection.Down && !SlidesAPI.State.HasHorizontal)"
        ComposeFaded="@_faded" ComposeFadedIf="@IsFaded"
        ComposeFragmented="@_fragmented" ComposeFragmentedIf="@IsFragmented"
        ComposeHighlightRight="@_highlightRight" ComposeHighlightRightIf="@(ArrowDirection == ArrowDirection.Right && ShouldHighlight)"
        ComposeHighlightDown="@_highlightDown" ComposeHighlightDownIf="@(ArrowDirection == ArrowDirection.Down && ShouldHighlight)">
    label: button;
    position: absolute;
    padding: 0;
    background-color: transparent;
    border: 0;
    outline: 0;
    cursor: pointer;
    color: currentColor;
    -webkit-transform: scale(0.9999);
    transform: scale(0.9999);
    transition: color 0.2s ease, opacity 0.2s ease, -webkit-transform 0.2s ease;
    transition: color 0.2s ease, opacity 0.2s ease, transform 0.2s ease;
    z-index: 2;
    pointer-events: auto;
    font-size: inherit;
    visibility: hidden;
    opacity: 0;
    -webkit-appearance: none;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
</Styled>

<Styled @bind-Classname="@_navigateLeft">
    label: navigate-left;
    right: 6.4em;
    bottom: 3.2em;
    -webkit-transform: translateX(-10px);
    transform: translateX(-10px);
</Styled>

<Styled @bind-Classname="@_navigateRight">
    label: navigate-right;
    right: 0;
    bottom: 3.2em;
    -webkit-transform: translateX(10px);
    transform: translateX(10px);
</Styled>


<Styled @bind-Classname="@_navigateUp">
    label: navigate-up;
    right: 3.2em;
    bottom: 6.4em;
    -webkit-transform: translateY(-10px);
    transform: translateY(-10px);
</Styled>

<Styled @bind-Classname="@_navigateDown">
    label: navigate-down;
    right: 3.2em;
    bottom: -1.4em;
    padding-bottom: 1.4em;
    -webkit-transform: translateY(10px);
    transform: translateY(10px);
</Styled>

<Styled @bind-Classname="@_enabled">
    label: enabled;
    visibility: visible;
    opacity: 0.9;
    cursor: pointer;
    -webkit-transform: none;
    transform: none;
</Styled>

<Styled @bind-Classname="@_locationOverrideLeft">
    label: location-override-left;
    bottom: 1.4em;
    right: 5.5em;
</Styled>

<Styled @bind-Classname="@_locationOverrideRight">
    label: location-override-right;
    bottom: 1.4em;
    right: 0.5em;
</Styled>

<Styled @bind-Classname="@_locationOverrideUp">
    label: location-override-up;
    right: 1.4em;
    bottom: 5em;
</Styled>

<Styled @bind-Classname="@_locationOverrideDown">
    label: location-override-down;
    right: 1.4em;
    bottom: 0.5em;
</Styled>

<Styled @bind-Classname="@_faded">
    label: faded;
    opacity: 0.3;
</Styled>

<Styled Classname="@_faded" PseudoClass="PseudoClasses.Hover">
    opacity: 1;
</Styled>

<Styled @bind-Classname="@_fragmented">
    label: fragmented;
    opacity: 0.5;
</Styled>

<Styled Classname="@_fragmented" PseudoClass="PseudoClasses.Hover">
    opacity: 1;
</Styled>

<Styled @bind-Classname="@_hidden">
    label: hidden;
    opacity: 0;
    visibility: hidden;
</Styled>

<Styled IsKeyframes="true" @bind-Classname="@_bounceRight">
    0%, 10%, 25%, 40%, 50% {
        -webkit-transform: translateX(0);
        transform: translateX(0); 
    }
    20% {
        -webkit-transform: translateX(10px);
        transform: translateX(10px); 
    }
    30% {
        -webkit-transform: translateX(-5px);
        transform: translateX(-5px); 
    }
</Styled>

<Styled IsKeyframes="true" @bind-Classname="@_bounceDown">
    0%, 10%, 25%, 40%, 50% {
        -webkit-transform: translateY(0);
        transform: translateY(0); 
    }
    20% {
        -webkit-transform: translateY(10px);
        transform: translateY(10px); 
    }
    30% {
        -webkit-transform: translateY(-5px);
        transform: translateY(-5px); 
    }
</Styled>

<Styled @bind-Classname="@_highlightRight">
    label: highlight;
    -webkit-animation: @_bounceRight 2s 50 both ease-out;
    animation: @_bounceRight 2s 50 both ease-out;
</Styled>

<Styled @bind-Classname="@_highlightDown">
    label: highlight;
    -webkit-animation: @_bounceDown 2s 50 both ease-out;
    animation: @_bounceDown 2s 50 both ease-out;
</Styled>
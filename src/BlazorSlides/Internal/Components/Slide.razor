@if (CurrentSlide is ISlideWithContent)
{
    <Content CurrentSlide="@((ISlideWithContent)CurrentSlide)" CurrentHorizontalIndex="@CurrentHorizontalIndex" CurrentVerticalIndex="@CurrentVerticalIndex" />
}

@if (CurrentSlide is ISlideContainer)
{
    <Stack CurrentSlide="@((ISlideContainer)CurrentSlide)" CurrentHorizontalIndex="@CurrentHorizontalIndex" CurrentVerticalIndex="@CurrentVerticalIndex" />
}

@code {
    [Parameter] public IHorizontalSlide CurrentSlide { get; set; }
    [Parameter] public int CurrentHorizontalIndex { get; set; }
    [Parameter] public int CurrentVerticalIndex { get; set; }
}
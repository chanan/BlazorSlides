<CascadingValue Value=SlidesAPI Name="SlidesAPI">
    <div class="@_revealContainer" role="application" @ref="@_domWrapper">
        <div class="@_slidesContainer">
            @ChildContent
        </div>
        @if (_showProgress)
        {
            <Progress />
        }
        <Controls HasDarkBackground="@_hasDarkBackground" HasLightBackground="@_hasLightBackground" />
        @if (_showSlideNumbers)
        {
            <SlideNumbers />
        }
    </div>
    <Scripts @ref="@_scripts" DomWrapper="@_domWrapper" OnWindowResize="@_OnWindowResize" />
</CascadingValue>

@* Reset CSS *@
<Styled>
    @_mixins.Normalize()
</Styled>

@* Global Styles *@

<Styled>
    html {
    width: 100%;
    height: 100%;
    height: 100vh;
    height: calc( var(--vh, 1vh) * 100);
    overflow: hidden;
    }

    body {
    height: 100%;
    overflow: hidden;
    position: relative;
    line-height: 1;
    margin: 0;
    background-color: #fff;
    color: #000;
    }
</Styled>

@* Main reveal container *@

<Styled @bind-Classname="@_reveal">
    label: reveal;
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    -ms-touch-action: pinch-zoom;
    touch-action: pinch-zoom;
</Styled>

<Styled Classname="@_reveal" PseudoClass="PseudoClasses.After">
    content: '';
    font-style: italic;
</Styled>

<Styled @bind-Classname="@_center" GlobalStyle="Helpers.Center">
    label: center;
    min-height: 0 !important;
</Styled>

@* Slides container *@

<Styled @bind-Classname="@_revealContainer" ComposeReveal="@_reveal" ComposeCenter="@_center" />

<Styled @bind-Classname="@_slidesClass">
    label: slides;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    pointer-events: none;
    overflow: visible;
    z-index: 1;
    text-align: center;
    -webkit-perspective: 600px;
    perspective: 600px;
    -webkit-perspective-origin: 50% 40%;
    perspective-origin: 50% 40%;
</Styled>

<Styled @bind-Classname="@_size">
    label: size;
    width: 960px;
    height: 700px;
    zoom: 1;
</Styled>

<Styled @bind-Classname="@_slidesContainer" ComposeSlides="@_slidesClass" ComposeCenter="@_center" ComposeSize="@_size" />